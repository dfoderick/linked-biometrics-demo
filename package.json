{
  "name": "next-boilerplate",
  "version": "1.0.1",
  "description": "Boilerplate for a Next.js + styled-components website.",
  "license": "MIT",
  "repository": "https://github.com/solarsailer/next-boilerplate",
  "author": {
    "name": "Andrew Dirksen, Sam Hellawell",
    "url": "https://dock.io"
  },
  "scripts": {
    "start": "next -p 8000",
    "build": "next build && next export && touch out/.nojekyll",
    "prod": "next start -p 8000",
    "test": "eslint ."
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "styled-components",
        {
          "ssr": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "plugin:react/recommended"
    ],
    "plugins": [
      "react-hooks"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "env": {
      "browser": true,
      "commonjs": true,
      "node": true,
      "es6": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "never",
          "named": "never",
          "asyncArrow": "always"
        }
      ],
      "object-curly-spacing": [
        "error",
        "never"
      ],
      "no-extra-boolean-cast": "off",
      "react-hooks/rules-of-hooks": "error",
      "react/display-name": "off",
      "react/prop-types": "off"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": false,
    "trailingComma": "always"
  },
  "dependencies": {
    "@docknetwork/sdk": "^0.3.5",
    "@sindresorhus/is": "^2.1.0",
    "@svgr/webpack": "^5.4.0",
    "axios": "^0.20.0",
    "crypto-ld": "^3.9.0",
    "deep-equal": "^2.0.3",
    "face-api.js": "^0.22.2",
    "jsonld-signatures": "^6.0.0",
    "next": "^9.3.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-dropzone": "^11.2.0",
    "react-transition-group": "^4.4.1",
    "styled-components": "^5.0.1",
    "uuid": "^8.3.0",
    "vc-js": "^0.6.4"
  },
  "devDependencies": {
    "babel-plugin-styled-components": "^1.10.7",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "eslint-plugin-standard": "^4.0.1",
    "prettier": "^2.0.2"
  }
}
