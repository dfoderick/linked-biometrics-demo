{
  "plugins": [],
  "globals": {
    "process": "readonly"
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "airbnb-base", "plugin:react/recommended"],
  "rules": {
    "no-use-before-define": ["error", { "functions": false, "classes": true, "variables": true }],
    "class-methods-use-this": "off",
    "no-return-await": "off",
    "no-plusplus": "off",
    "max-len": "off",
    "no-console": "off"
  }
}
